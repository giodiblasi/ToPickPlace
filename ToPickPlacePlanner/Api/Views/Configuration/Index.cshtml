@model Domain.Models.Configuration

<h1>Genetic Algorithm Configuration</h1>
MVC
<form method="post">
    <table class="table">
        <tbody>
            <tr>
                <td>
                    <label for="PopulationSize">Population Size</label>
                </td>
                <td>
                    <input type="number" name="PopulationSize" value="@Model.PopulationSize">
                </td>
            </tr>
            <tr>
                <td>
                    <label for="EliteSize">Elite Size</label>
                </td>
                <td>
                    <input type="number" name="EliteSize" value="@Model.EliteSize">
                </td>
            </tr>
            <tr>
                <td>
                    <label for="MaxGenerations">Max Generations</label>
                </td>
                <td>
                    <input type="number" name="MaxGenerations" value="@Model.MaxGenerations">
                </td>
            </tr>

            <tr>
                <td>
                    <label for="MutationProbability">Mutation Probability</label>
                </td>
                <td>
                    <input type="number" step="0.1" min="0" max="100" name="MutationProbability" value="@Model.MutationProbability">
                </td>
            </tr>

            <tr>
                <td>
                    <label for="SolutionPrecision">Solution Precision</label>
                </td>
                <td>
                    <input type="number" step="0.1" min="0" max="1" name="SolutionPrecision" value="@Model.SolutionPrecision">
                </td>
            </tr>
        </tbody>
    </table>
    <input type = "submit">
</form>